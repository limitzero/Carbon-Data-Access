<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Carbon.DataAccess.Tests" namespace="Carbon.DataAccess.Tests.Domain" default-lazy="false">
  <!-- entity: Order -->
  <class name="Order" table="Orders">
    <id name="Id" column="orderID" type="Int32" access="nosetter.camelcase-underscore">
      <generator class="identity" />
    </id>
    <!-- properties for entity 'Order' -->
    <property name="CreationDate" column="CreationDate" type="DateTime" length="200" access="nosetter.lowercase-underscore" />
    <!-- many "Order" are associated with one instance of a "OrderStatus" -->
    <many-to-one name="Status" class="OrderStatus" cascade="all" access="nosetter.lowercase-underscore" column="orderstatusID" foreign-key="fk_OrderStatus_has_instances_of_Order" fetch="join" not-found="ignore" />
    <!-- many "Order" are associated with one instance of a "OrderPriority" -->
    <many-to-one name="Priority" class="OrderPriority" cascade="all" access="nosetter.lowercase-underscore" column="orderpriorityID" foreign-key="fk_OrderPriority_has_instances_of_Order" fetch="join" not-found="ignore" />
    <!-- many "Order" are associated with one instance of a "HomeAddress" -->
    <many-to-one name="HomeAddress" class="HomeAddress" cascade="all" access="nosetter.lowercase-underscore" column="homeaddressID" foreign-key="fk_HomeAddress_has_instances_of_Order" fetch="join" not-found="ignore" />
    <!-- many "Order" are associated with one instance of a "ShippingAddress" -->
    <many-to-one name="ShippingAddress" class="ShippingAddress" cascade="all" access="nosetter.lowercase-underscore" column="shippingaddressID" foreign-key="fk_ShippingAddress_has_instances_of_Order" fetch="join" not-found="ignore" />
    <!-- 'Order' has many 'OrderLine' -->
    <bag access="nosetter.lowercase-underscore" name="Orderlines" inverse="false" cascade="all" generic="true">
      <key column="orderID" foreign-key="fk_Order_has_instances_of_OrderLine" />
      <one-to-many class="OrderLine" />
    </bag>
  </class>
</hibernate-mapping>